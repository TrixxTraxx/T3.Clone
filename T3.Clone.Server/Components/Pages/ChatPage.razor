@page "/~/chat"
@using Microsoft.Extensions.Options
@using T3.Clone.Server.Configuration
@layout AuthLayout
@inject IOptions<Appsettings> AppSettings
@inject NavigationManager NavigationManager

@code {

    protected override async Task OnInitializedAsync()
    {
        //redirect to client chat url
        var clientChatUrl = AppSettings.Value.ClientUrl + "/chat";
        Console.WriteLine("Redirecting to client chat URL: " + clientChatUrl);
        NavigationManager.NavigateTo(clientChatUrl, forceLoad: true);
    }
}